<% content_for :jumbotron do %>
	<div class="col-sm-12">
		<div class="jumbotron center-block">
			<h1>Pokemon Battle</h1>
		</div>
	</div>
<% end %>

<div class="col-sm-12">
<%= link_to 'Add a Pokemon Battle', new_pokemon_battle_path, class: "btn btn-primary"%>
	<br /><br />
	<table class="table table-bordered">
		<thead>
		  <tr class="bg-primary">
		    <th width="50%">Pokemon 1</th>
		    <th width="50%"  style="text-align: right;">Pokemon 2</th>
		  </tr>
		</thead>
	</table>
	<% idx=0 %>
	<% @pokemon_battles.each do |pokemon_battle| %>
		<table class="table table-bordered">
			<tr class="bg-default">
				<td rowspan="3" width="40%"><kbd><%= pokemon_battle.pokemon1_name %></kbd>
				<%= image_tag pokemon_battle.pokemon1_image, size: "100x100" %></td>
				<td style="text-align: center;">
					<pre>Turn: <%= pokemon_battle.current_turn %></pre>
					<pre>State: <%= pokemon_battle.state %></pre>
					<ul class="list-inline">
						<li><%= link_to "Battle! âš”", pokemon_battle_path(pokemon_battle), class: 'btn btn-success' %></li>
						<li><%= button_to 'Destroy', pokemon_battle, 
							method: :delete,
							class: 'btn btn-danger',
				  data: { confirm: 'Are you sure?' } %></li>  
				  </ul>	
				</td>
			  <td rowspan="3" style="text-align: right;"  width="40%"><%= image_tag pokemon_battle.pokemon2_image, size: "100x100" %><kbd><%= pokemon_battle.pokemon2_name %></kbd>
			  </td>
			</tr>	
		</table>
	<% end %>
</div>