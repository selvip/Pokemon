<%= form_for(@skill) do |f| %>
	<%= f.label 'Name', for: 'name' %>
	<%= f.text_field :name, placeholder: 'Name', class: 'form-control form-group' %>
	
	<%= (content_tag(:div, @skill.errors.full_messages_for(:name).to_sentence , class: 'alert alert-danger', role: 'alert')) if @skill.errors.include?(:name) %>
	
	<%= f.label 'Power', for: 'power' %>
	<%= f.number_field :power, placeholder: 'Power', class: 'form-control form-group' %>

	<%= (content_tag(:div, @skill.errors.full_messages_for(:power).to_sentence , class: 'alert alert-danger', role: 'alert')) if @skill.errors.include?(:power) %>

	<%= f.label 'Max PP', for: 'max_pp' %>
	<%= f.number_field :max_pp, placeholder: 'Max PP', class: 'form-control form-group' %>

	<%= (content_tag(:div, @skill.errors.full_messages_for(:max_pp).to_sentence , class: 'alert alert-danger', role: 'alert')) if @skill.errors.include?(:max_pp) %>

	<%= f.label 'Element Type', for: 'element_type' %>
	<%= f.select(:element_type, Skill::ELEMENT, {}, {class: 'form-control form-group'}) %>

	<%= f.submit "Submit", class: "btn btn-primary form-group" %>
<% end %>